<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
  		
<validators>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="msg1"/>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring">
			<message key="msg2"/>
		</field-validator>
		<field-validator type="email">
			<message key="msg3"/>	<!-- <message>Email is invalid</message> if we want our msg here only -->
		</field-validator>
	</field>
	<field name="address">
		<field-validator type="requiredstring">
			<message key="msg4"/>
		</field-validator>
	</field>




</validators>